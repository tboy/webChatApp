/**btn**/

.bigBtn {
  margin: auto;
  width: 10rem;
  height: 10rem;
  border-radius: 100%;
  background: #224994;
  color: white;
  font-size: 1rem;
  line-height: 1rem;
  text-align: center;
  font-weight: 0;
  font-family: "proxima-nova", Helvetica, Verdana, Arial, "Lucida Grande", sans-serif;
  font-weight: 100;
  position: relative;
  margin-top:0.5rem;
  border-radius: 100%;
  text-shadow: 3px 3px 0px #001d56;
  -webkit-box-shadow: 0px 7px 0px #001d56, 0px 12px 0px rgba(0, 0, 0, 0.5);
  box-shadow: 0px 7px 0px #001d56, 0px 12px 0px rgba(0, 0, 0, 0.5);
  cursor: pointer;
}

.bigBtn:hover,
.bigBtn:focus {
  -webkit-box-shadow: 0px 7px 0px #001d56, 0px 12px 0px rgba(0, 0, 0, 0.5);
  box-shadow: 0px 7px 0px #001d56, 0px 12px 0px rgba(0, 0, 0, 0.5);
}

.bigBtn:active {
  top: 5px;
  -webkit-transition-property: all;
  transition-property: all;
  -webkit-transition-duration: .15s;
  transition-duration: .15s;
  -webkit-box-shadow: 0px 2px 0px #001d56, 0px 4px 0px rgba(0, 0, 0, 0.1);
  box-shadow: 0px 2px 0px #001d56, 0px 4px 0px rgba(0, 0, 0, 0.1);
}

